#! /usr/bin/env perl

use strictures;

use RPC::Serialized::Server::NetServer;
use Try::Tiny;
use UUID::Tiny;

exit sciolist_agent(@ARGV);

sub sciolist_agent
{
	RPC::Serialized::Server::NetServer->new({
		net_server => {
			port => '/tmp/sciolist-agent.sock|unix',
		},
		rpc_serialized => {
			handler_namespaces => [
				'App::sciolist::RPC::Handler',
			],
		}
	})->run;
	return 1;
}
